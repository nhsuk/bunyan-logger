{
  "name": "nhsuk-bunyan-logger",
  "version": "1.4.0",
  "description": "Facade over bunyan logger.",
  "main": "index.js",
  "scripts": {
    "lint": "eslint .",
    "test": "NODE_ENV=test mocha --recursive test",
    "istanbul": "NODE_ENV=test istanbul",
    "generate-coverage": "yarn run istanbul -- cover _mocha -- --recursive",
    "check-coverage": "istanbul check-coverage --config .istanbul.yml",
    "upload-coverage": "cat ./coverage/lcov.info | coveralls",
    "watch-lint": "esw --watch .",
    "watch-test": "yarn run test -- --watch --reporter min",
    "snyk": "snyk",
    "snyk-travis": "yarn run snyk -- test --org=nhsuk && yarn run snyk -- monitor --org=nhsuk",
    "prepublish": "yarn run git-hooks",
    "prepush": "yarn run git-hooks",
    "precommit": "yarn run git-hooks",
    "git-hooks": "yarn run lint && yarn run generate-coverage && yarn run check-coverage && yarn run snyk -- test",
    "travis": "yarn run git-hooks && yarn run upload-coverage && yarn run snyk-travis"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nhsuk/bunyan-logger.git"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bunyan": "^1.8.10",
    "is-nan": "^1.2.1"
  },
  "devDependencies": {
    "chai": "^4.0.2",
    "coveralls": "^2.13.1",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^15.0.1",
    "eslint-config-nhsuk": "^0.2.0",
    "eslint-plugin-import": "^2.3.0",
    "eslint-plugin-json": "^1.2.0",
    "eslint-plugin-jsx-a11y": "^5.0.3",
    "eslint-plugin-mocha": "^4.10.1",
    "eslint-plugin-react": "^7.1.0",
    "eslint-watch": "^3.1.1",
    "husky": "^0.13.4",
    "istanbul": "^0.4.5",
    "mocha": "^3.4.2",
    "snyk": "^1.34.4"
  },
  "snyk": true
}
