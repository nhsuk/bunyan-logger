{
  "name": "nhsuk-bunyan-logger",
  "version": "1.4.1",
  "description": "Facade over bunyan logger.",
  "main": "index.js",
  "scripts": {
    "lint": "eslint .",
    "test": "NODE_ENV=test mocha --recursive test",
    "istanbul": "NODE_ENV=test istanbul",
    "generate-coverage": "yarn istanbul -- cover _mocha -- --recursive",
    "check-coverage": "istanbul check-coverage --config .istanbul.yml",
    "upload-coverage": "cat ./coverage/lcov.info | coveralls",
    "watch-lint": "esw --watch .",
    "watch-test": "yarn test -- --watch --reporter min",
    "prepublish": "yarn git-hooks",
    "prepush": "yarn git-hooks && yarn snyk test",
    "precommit": "yarn git-hooks",
    "git-hooks": "yarn lint && yarn generate-coverage && yarn check-coverage",
    "travis": "yarn git-hooks && yarn upload-coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nhsuk/bunyan-logger.git"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bunyan": "^1.8.10",
    "is-nan": "^1.2.1"
  },
  "devDependencies": {
    "chai": "^4.0.2",
    "coveralls": "^2.13.1",
    "eslint": "^4.1.1",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-config-nhsuk": "^0.3.0",
    "eslint-plugin-import": "^2.6.1",
    "eslint-plugin-json": "^1.2.0",
    "eslint-plugin-mocha": "^4.11.0",
    "eslint-watch": "^3.1.2",
    "husky": "^0.14.2",
    "istanbul": "^0.4.5",
    "mocha": "^3.4.2",
    "snyk": "^1.36.2"
  }
}
